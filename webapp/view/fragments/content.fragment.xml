<c:FragmentDefinition xmlns:cards="sap.f.cards" xmlns:f="sap.f"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:layout="sap.ui.layout.form"
>
    <Panel
        class="sapUiNoContentPadding sapUiSmallMarginTop"
        width="100%"
        height="80vh"
        stickyHeader="true"
        headerText="{i18n>WBSElementSelection}"
    >  <layout:SimpleForm
            class="sapUiLargeMarginTop"
            id="WBSForm"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanL="4"
            labelSpanM="4"
            emptySpanL="1"
            emptySpanM="1"
            columnsL="2"
            columnsM="1"
        >
            <Label text="{i18n>SelectWBSElement}" />
            <Input
                id="idWbsElement"
                showValueHelp="true"
                showClearIcon="true"
                required="true"
                width="100%"
                valueHelpRequest=".onOpenValueHelp"
                showSuggestion="true"
            />

            <Label text="" /> 
            <Button
                text="{i18n>Syncronize}"
                icon="sap-icon://synchronize"
                type="Emphasized"
                press=".onSynchronizePressed"
            />
        </layout:SimpleForm> 
</Panel>
