<mvc:View
    controllerName="ansaldowbselement.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
>
    <f:DynamicPage
        fitContent="true"
        showFooter="false"
        preserveHeaderStateOnScroll="true"
    >
        <f:title>
            <f:DynamicPageTitle backgroundDesign="Translucent">
                <f:heading>
                    <Title text="{i18n>appTitle}" />
                </f:heading>
                <f:actions>
                    <layout:HorizontalLayout allowWrapping="true">
                        <layout:VerticalLayout>
                            <Image
                                src="public/images/ansaldo_nucleare_logo.jpg"
                                height="40px"
                                width="auto"
                            />
                        </layout:VerticalLayout>
                    </layout:HorizontalLayout>
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>

        <f:content>
					<core:Fragment
                fragmentName="ansaldowbselement.view.fragments.content"
                type="XML"
            />
        </f:content>

        <!-- Footer -->
        <f:footer>
           
        </f:footer>
    </f:DynamicPage>
</mvc:View>